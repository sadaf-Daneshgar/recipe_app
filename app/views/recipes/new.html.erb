<%= form_with model: [@user, @recipe], url: user_recipe_path(@user), method: :post do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :preparation_time %>
    <%= f.text_field :preparation_time %>
  </div>

  <div>
    <%= f.label :cooking_time %>
    <%= f.text_field :cooking_time %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>