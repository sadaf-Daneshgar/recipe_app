<h1>Create your recipe📝😍</h1>

<%= form_for([@user, @recipe]) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

    <div>
        <%= f.label :preparation_time %>
        <%= f.text_field :preparation_time %>
    </div>

    <div>
        <%= f.label :cooking_time %>
        <%= f.text_field :cooking_time %>
    </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>