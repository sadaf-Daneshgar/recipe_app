<div class="container">
  <h1>Recipes üç≤</h1>
  <table class="recipe-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.name, user_recipe_path(@user, recipe) %></td>
          <td><%= truncate(recipe.description, length: 30) %></td>
          <td><%= button_to "Remove", user_recipe_path(@user, recipe), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New Recipe", new_user_recipe_path(@user), class: "add-food-link" %>
</div>
