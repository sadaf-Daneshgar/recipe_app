<div class="container">
  <h1>Public Recipes ğŸŒ</h1>
  <table class="recipe-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @p_recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.name, user_recipe_path(recipe.user, recipe) %></td>
          <td><%= recipe.description %></td>
          <td>
            <%= button_to "Remove", user_recipe_path(recipe.user, recipe), method: :delete,
                          disabled: recipe.user != current_user, class: "disabled" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
