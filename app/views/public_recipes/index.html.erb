<div class="container">
  <h1>Public Recipes ğŸŒ</h1>
  <% @p_recipes.each do |recipe| %>
    <div class="recipe-container">
      <div class="recipe-info">
       <h2> <%= link_to recipe.name, user_recipe_path(recipe.user, recipe)%></h2>
       <h3>  <%= recipe.description %></h3>
      </div>
      <%= button_to "Remove", user_recipe_path(recipe.user, recipe), method: :delete, 
                              disabled: recipe.user != current_user, class: "disabled" %>
    </div>
  <% end %>
</div>
