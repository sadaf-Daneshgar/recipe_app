<div class="container">
  <h1>Public Recipes!</h1>
  <% @p_recipes.each do |recipe| %>
    <div class="recipe-container">
      <div class="recipe-info">
       <h2> <%= link_to recipe.name, public_recipes_path%></h2>
       <h3>  <%= recipe.description %></h3>
      </div>
    </div>
  <% end %>
</div>
